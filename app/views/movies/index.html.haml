-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    = form_tag movies_path, :method => :get do
      Include:
      - Movie::all_ratings.each do |rating|
        = rating
        = check_box_tag "ratings[]", rating, @selected_ratings.include?(rating)
        -#= check_box_tag "ratings[#{rating}]"
      = submit_tag 'Refresh'
    %tr
      %th{ :class => ('hilite' if params[:movies_sort] == 'title') }= sortable 'title'
      %th{ :class => ('hilite' if params[:movies_sort] == 'rating') }= sortable 'rating'
      %th{ :class => ('hilite' if params[:movies_sort] == 'release_date') }= sortable 'release_date', 'Release Date'
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
